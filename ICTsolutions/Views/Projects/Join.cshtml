@using ICTsolutions.Areas.Identity.Data
@using ICTsolutions.Core.ViewModels;


@*binding model to applicationuser to be able to acces data*@
@model ICTsolutions.Core.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Join";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<main>
    <div class="py-5 text-left">
        <h2>Join Project</h2>
    </div>

    <div class="row g-5">
        <div class="col-md-7 col-lg-8">

            @*advise to use*@
            @using (Html.BeginForm("Join", "Users"))
            {
                //this using binds the user id to a value
                @Html.HiddenFor(h => Model.Users.Id)

                @*Remove <form method="post"> </form>*@
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="@Model.Users.FirstName" class="form-label"></label>
                        <input asp-for="@Model.Users.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="@Model.Users.FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="@Model.Users.LastName" class="form-label"></label>
                        <input asp-for="@Model.Users.LastName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="@Model.Users.LastName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="@Model.Users.Email" class="form-label"></label>
                        <div class="input-group has-validation">
                            <span class="input-group-text"></span>
                            <input asp-for="@Model.Users.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="@Model.Users.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            }

        </div>
    </div>

</main>



